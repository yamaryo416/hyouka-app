<% provide(:title, "深部腱反射編集") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "深部腱反射" %>
<div class="main-contents patient-page edit-tendon-reflex edit-section">
  <div class="container">
    <%= form_scale_link_section("深部腱反射", "tendon_reflex_scales", @patient) %>
    <%= form_with(url: patient_tendon_reflex_scale_path(id: @tendon_reflex_scale), scope: :tendon_reflex_scale, local: true, method: :patch) do |f| %>
      <%= render "form", f: f, tendon_reflex_scale: @tendon_reflex_scale %>
      <div class="submit-form">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>

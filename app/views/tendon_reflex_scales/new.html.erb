<h1>深部腱反射</h1>
<%= @patient.unique_id %>
<%= link_to "患者ページに戻る", patient_path(@patient) %>
<%= form_with(url: patient_tendon_reflex_scales_path, scope: :tendon_reflex_scale, local: true) do |f| %>
<div class="d-flex justify-content-center">
  <div class="tendon_reflex_head">
    <dd>下顎</dd>
    <dd>腹筋</dd>
  </div>
  <div class="tendon_reflex_form" style="width:80px;">
    <%= f.select :jaw, TendonReflexScale.human_select_options("jaw") %>
    <%= f.select :abdominal, TendonReflexScale.human_select_options("abdominal") %>
  </div>
</div>
  <div class="d-flex justify-content-center">
    <div class="tendon_reflex_head">
      <dd style="height:24px;"></dd>
      <dd>胸筋</dd>
      <dd>上腕二頭筋</dd>
      <dd>上腕三頭筋</dd>
      <dd>腕橈骨筋</dd>
      <dd>回内筋</dd>
      <dd>膝蓋腱</dd>
      <dd>アキレス腱</dd>
    </div>
    <div class="right_tendon_reflex_form" style="width:80px;">
      <dd>右</dd>
      <% @tendon_reflex_scale.right_each_score.each  do |attr_name, value| %>
        <%= f.select attr_name, TendonReflexScale.human_select_options(attr_name) %>
      <% end %>
    </div>
    <div class="left_tendon_reflex_form" style="width:80px;">
      <dd>左</dd>
      <% @tendon_reflex_scale.left_each_score.each  do |attr_name, value| %>
        <%= f.select attr_name, TendonReflexScale.human_select_options(attr_name) %>
      <% end %>
    </div>
  </div>
  <%= f.submit %>
<% end %>

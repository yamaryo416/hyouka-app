<h1>深部腱反射</h1>
<%= @patient.unique_id %>
<%= link_to "患者ページに戻る", patient_path(@patient) %>
<div class="d-flex justify-content-center">
  <div class="tendon_reflex_head">
    <dd>下顎</dd>
    <dd>腹筋</dd>
  </div>
  <div class="tendon_reflex_form" style="width:80px;">
    <dd class="jaw_score"><%= @tendon_reflex_scale.jaw_i18n %></dd>
    <dd class="abdominal_score"><%= @tendon_reflex_scale.abdominal_i18n %></dd>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div class="tendon_reflex_head">
    <dd style="height:24px;"></dd>
    <dd>胸筋</dd>
    <dd>上腕二頭筋</dd>
    <dd>上腕三頭筋</dd>
    <dd>腕橈骨筋</dd>
    <dd>回内筋</dd>
    <dd>膝蓋腱</dd>
    <dd>アキレス腱</dd>
  </div>
  <div class="right_tendon_reflex_form" style="width:80px;">
    <dd>右</dd>
    <% @tendon_reflex_scale.right_each_score.keys.each  do |attr_name| %>
      <dd class="<%= attr_name %>_score"><%= @tendon_reflex_scale.send("#{attr_name}_i18n") %></dd>
    <% end %>
  </div>
  <div class="left_tendon_reflex_form" style="width:80px;">
    <dd>左</dd>
    <% @tendon_reflex_scale.left_each_score.keys.each  do |attr_name| %>
      <dd class="<%= attr_name %>_score"><%= @tendon_reflex_scale.send("#{attr_name}_i18n") %></dd>
    <% end %>
  </div>
</div>
<%= link_to "深部腱反射を編集する", edit_patient_tendon_reflex_scales_path(@patient) %>
<%= link_to "深部腱反射を削除する", patient_tendon_reflex_scales_path(@patient), method: :delete, data: { confirm: "深部腱反射を削除します。よろしいですか?" } %>

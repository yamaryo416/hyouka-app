<% provide(:title, "腱反射") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "腱反射" %>
<div class="link_section d-flex justify-content-between">
  <div class="left_link">
    <%= link_to "腱反射一覧に戻る", patient_tendon_reflex_scales_path(@patient), class: "btn btn-info" %>
  </div>
  <div class="right_link">
    <%= link_to "腱反射を編集する", edit_patient_tendon_reflex_scale_path(@patient, @tendon_reflex_scale), class: "custom-btn btn-radius-solid" %>
    <%= link_to "腱反射を削除する", patient_tendon_reflex_scale_path(@patient, @tendon_reflex_scale),class: "custom-btn btn-radius-solid", method: :delete, data: { confirm: "腱反射を削除します。よろしいですか?" } %>
  </div>
</div>
<div class="main-contents tendon-reflex-section">
  <div class="tendon-reflex-overview overview">
    <h3>筋緊張亢進</h3>
    <p class="hyperreflexia-detail">
      <% if @tendon_reflex_scale.hyperreflexia_part.empty? %>
        なし
      <% else %>
        <% @tendon_reflex_scale.hyperreflexia_part.each do |part| %>
          <%= TendonReflexScale.human_attribute_name(part[0]) %>
        <% end %>
      <% end %>
    </p>
  </div>
  <div class="tendon-reflex-overview overview">
    <h3>筋緊張低下</h3>
    <p class="hyporeflexia-detail">
      <% if @tendon_reflex_scale.hyporeflexia_part.empty? %>
        なし
      <% else %>
        <% @tendon_reflex_scale.hyporeflexia_part.each do |part| %>
          <%= TendonReflexScale.human_attribute_name(part[0]) %>
        <% end %>
      <% end %>
    </p>
  </div>
  <div class="d-flex justify-content-center">
    <div class="tendon_reflex_head part-head">
      <dd>下顎</dd>
      <dd>腹筋</dd>
    </div>
    <div class="tendon-reflex-score">
      <dd class="jaw_score"><%= @tendon_reflex_scale.jaw_i18n %></dd>
      <dd class="abdominal_score"><%= @tendon_reflex_scale.abdominal_i18n %></dd>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <div class="tendon_reflex_head part-head">
      <dd class="left-top"></dd>
      <dd>胸筋</dd>
      <dd>上腕二頭筋</dd>
      <dd>上腕三頭筋</dd>
      <dd>腕橈骨筋</dd>
      <dd>回内筋</dd>
      <dd>膝蓋腱</dd>
      <dd>アキレス腱</dd>
    </div>
    <div class="right_tendon_reflex_form tendon-reflex-score">
      <dd class="direction-head">右</dd>
      <% @tendon_reflex_scale.right_scale_score.keys.each  do |attr_name| %>
        <dd class="<%= attr_name %>_score"><%= @tendon_reflex_scale.send("#{attr_name}_i18n") %></dd>
      <% end %>
    </div>
    <div class="left_tendon_reflex_form tendon-reflex-score">
      <dd class="direction-head">左</dd>
      <% @tendon_reflex_scale.left_scale_score.keys.each  do |attr_name| %>
        <dd class="<%= attr_name %>_score"><%= @tendon_reflex_scale.send("#{attr_name}_i18n") %></dd>
      <% end %>
    </div>
  </div>
</div>

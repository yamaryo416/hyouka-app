<h1>FACT</h1>
<%= link_to "患者ページに戻る", patient_path(@patient) %>
<%= link_to "新規作成", new_patient_fact_scale_path(@patient) %>

<table border="1" width="500" cellspacing="0" cellpadding="5" bordercolor="#333333">
  <tr>
    <th bgcolor="#EE0000"><font color="#FFFFFF">日付</font></th>
    <th bgcolor="#EE0000" width="500"><font color="#FFFFFF">総得点</font></th>
  </tr>
  <% @fact_scales.each_with_index do |fact_scale, i| %>
    <tr class="fact_score">
      <td class="fact<%= i %>_created_at" bgcolor="#99CC00" align="right" nowrap><%= fact_scale.created_at.strftime('%Y/%m/%d') %></td>
      <td class="fact<%= i %>_total_score" bgcolor="#FFFFFF" valign="top" width="500"><%= fact_scale.total_score %></td>
      <td bgcolor="#FFFFFF" valign="top" width="200">
        <%= link_to "詳細", patient_fact_scale_path(@patient, fact_scale), class: "fact#{i}_show_link show_link" %>
      </td>
      <td bgcolor="#FFFFFF" valign="top" width="200">
        <%= link_to "編集する", edit_patient_fact_scale_path(@patient, fact_scale), class: "fact#{i}_edit_link edit_link" %>
      </td>
      <td bgcolor="#FFFFFF" valign="top" width="200">
        <%= link_to "削除する", patient_fact_scale_path(@patient, fact_scale),class: "fact#{i}_delete_link delete_link", method: :delete, data: { confirm: "factを削除します。よろしいですか?" } %>
      </td>
    </tr>
  <% end %>
</table>

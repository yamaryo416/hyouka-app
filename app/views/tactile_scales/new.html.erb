<% provide(:title, "触覚検査作成") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "触覚検査" %>
<div class="main-contents patient-page new-tactile new-section">
  <div class="container">
    <%= form_scale_link_section("触覚検査", "tactile_scales", @patient) %>
    <%= form_with(url: patient_tactile_scales_path, scope: :tactile_scale, local: true) do |f| %>
      <%= render "form", f: f, tactile_scale: @tactile_scale %>
      <div class="submit-form">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>

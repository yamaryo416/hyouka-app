<% provide(:title, "触覚検査作成") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "触覚検査" %>
<%= link_to "触覚検査一覧に戻る", patient_tactile_scales_path(@patient), class: "btn btn-info" %>
<div class="main-contents new-tactile">
  <%= form_with(url: patient_tactile_scale_path(id: @tactile_scale), scope: :tactile_scale, local: true, method: :patch) do |f| %>
    <div class="d-flex justify-content-center">
      <div class="tactile_head part-head">
        <dd class="left-top"></dd>
        <dd>上腕</dd>
        <dd>前腕</dd>
        <dd>手</dd>
        <dd>大腿</dd>
        <dd>下腿</dd>
        <dd>後足部</dd>
        <dd>前足部</dd>
      </div>
      <div class="right_tactile_form tactile-form">
        <dd class="direction-head">右</dd>
        <% @tactile_scale.right_scale_score.keys.each  do |attr_name| %>
          <div>
            <%= f.select attr_name, TactileScale.human_select_options(attr_name) %>
          </div>
        <% end %>
      </div>
      <div class="left_tactile_form tactile-form">
        <dd class="direction-head">左</dd>
        <% @tactile_scale.left_scale_score.keys.each  do |attr_name| %>
          <div>
            <%= f.select attr_name, TactileScale.human_select_options(attr_name) %>
          </div>
        <% end %>
      </div>
    </div>
    <%= f.submit %>
  <% end %>
</div>

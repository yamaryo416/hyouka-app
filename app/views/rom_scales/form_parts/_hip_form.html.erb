<div class="collapse" id="hip_rom_form">
  <div class="card card-body">
    <h3>肩関節</h3>
    <div class="d-flex justify-content-center">
      <div class="hip_rom_head">
        <dd style="height:24px;"></dd>
        <dd>屈曲</dd>
        <dd>伸展</dd>
        <dd>内転</dd>
        <dd>外転</dd>
        <dd>内旋</dd>
        <dd>外旋</dd>
      </div>
      <div class="right_hip_rom_form" style="width:80px;">
        <dd>右</dd>
        <% rom_scale.right_hip_each_score.keys.each  do |attr_name| %>
          <%= f.number_field attr_name, id: "#{attr_name}_form", step: "5", in: -180..180 %>
        <% end %>
      </div>
      <div class="left_hip_rom_form" style="width:80px;">
        <dd>左</dd>
        <% rom_scale.left_hip_each_score.keys.each  do |attr_name| %>
          <%= f.number_field attr_name, id: "#{attr_name}_form", step: "5", in: -180..180 %>
        <% end %>
      </div>
    </div>
  </div>
</div>

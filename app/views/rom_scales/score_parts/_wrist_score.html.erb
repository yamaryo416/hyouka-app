<div class="collapse" id="wrist_rom_score">
  <div class="card card-body">
    <h3>手関節</h3>
    <div class="d-flex justify-content-center">
      <div class="wrist_rom_head part-head">
        <dd class="left-top"></dd>
        <dd>掌屈</dd>
        <dd>背屈</dd>
        <dd>橈屈</dd>
        <dd>尺屈</dd>
      </div>
      <div class="right_wrist_rom_score rom-score">
        <dd class="direction-head">右</dd>
        <% rom_scale.right_wrist_scale_score.each do |attr_name, score| %>
          <dd class="<%= attr_name %>_score"><%= score %>°</dd>
        <% end %>
      </div>
      <div class="left_wrist_rom_score rom-score">
        <dd class="direction-head">左</dd>
        <% rom_scale.left_wrist_scale_score.each do |attr_name, score| %>
          <dd class="<%= attr_name %>_score"><%= score %>°</dd>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if model.errors.any? %>
  <div id="error_explanation" class="error-explanation">
    <div class="alert alert-danger">
      <%= model.errors.count%>件のエラーが発生しました。
    </div>
    <ul>
      <% model.errors.full_messages.each do |message| %>
        <li>・<%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

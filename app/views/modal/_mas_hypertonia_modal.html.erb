<div class="mas-hypertonia-modal">
  <div class="modal fade" id="mas-hypertonia-part" tabindex="-1" role="dialog" aria-labelledby="masHypertoniaPartLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">筋緊張亢進</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body mas-hypertonia-part">
          <% patient.mas_scales.last.decorate.hypertonia_part.each do |part| %>
            <%= MasScale.human_attribute_name(part[0]) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

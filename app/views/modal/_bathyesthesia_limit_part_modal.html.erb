<div class="bathyesthesia-limit-modal">
  <div class="modal fade" id="bathyesthesia-limit-part" tabindex="-1" role="dialog" aria-labelledby="bathyesthesiaLimitPartLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">機能低下</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body bathyesthesia-limit-part">
          <% patient.bathyesthesia_scales.last.decorate.limit_part.each do |part| %>
            <%= BathyesthesiaScale.human_attribute_name(part[0]) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

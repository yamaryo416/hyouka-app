<table class="table">
  <thead>
    <tr>
      <th scope="col">項目</th>
      <th scope="col">評価結果</th>
    </tr>
  </thead>
  <tbody>
    <% bestest_scale.scale_attributes.each_with_index do |attr_name, i| %>
      <tr>
        <td class="<%= attr_name %>">
          <span><%= i +1 %>)</span>
          <%= link_to BestestScale.human_attribute_name(attr_name), "#", class: "col-sm-3", data: {toggle: "modal", target: "#scale#{i + 1}" } %>
        </td>
        <td class="<%= attr_name %>_score"><%= bestest_scale.send("#{attr_name}_i18n") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

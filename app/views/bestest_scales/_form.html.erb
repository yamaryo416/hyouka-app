<h3>予測的姿勢制御</h3>
<% BestestScale::APA_ATTRIBUTES.each_with_index do |attr_name, i| %>
  <div class="scale_column row">
    <span><%= i + 1 %>)</span>
    <%= link_to BestestScale.human_attribute_name(attr_name), "#", class: "col-sm-3", data: {toggle: "modal", target: "#scale#{i + 1}" } %>
    <%= f.select attr_name, BestestScale.human_select_options(attr_name), class: "col-sm-2" %>
  </div>
<% end %>

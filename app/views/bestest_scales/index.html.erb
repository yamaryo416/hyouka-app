<h1>Mini-BESTest</h1>
<%= link_to "患者ページに戻る", patient_path(@patient) %>
<%= link_to "新規作成", new_patient_bestest_scale_path(@patient) %>

<table border="1" width="500" cellspacing="0" cellpadding="5" bordercolor="#333333">
  <tr>
    <th bgcolor="#EE0000"><font color="#FFFFFF">日付</font></th>
    <th bgcolor="#EE0000" width="300"><font color="#FFFFFF">予測的姿勢制御</font></th>
    <th bgcolor="#EE0000" width="300"><font color="#FFFFFF">反応的姿勢制御</font></th>
    <th bgcolor="#EE0000" width="300"><font color="#FFFFFF">感覚機能</font></th>
    <th bgcolor="#EE0000" width="300"><font color="#FFFFFF">動的歩行</font></th>
    <th bgcolor="#EE0000" width="500"><font color="#FFFFFF">総得点</font></th>
  </tr>
  <% @bestest_scales.each_with_index do |bestest_scale, i| %>
    <tr class="bestest_score">
      <td class="bestest<%= i %>_created_at" bgcolor="#99CC00" align="right" nowrap><%= bestest_scale.created_at.strftime('%Y/%m/%d') %></td>
      <td class="bestest<%= i %>_apa_score" bgcolor="#FFFFFF" valign="top" width="150"><%= bestest_scale.apa_score %></td>
      <td class="bestest<%= i %>_cpa_score" bgcolor="#FFFFFF" valign="top" width="150"><%= bestest_scale.cpa_score %></td>
      <td class="bestest<%= i %>_sensory_function_score" bgcolor="#FFFFFF" valign="top" width="150"><%= bestest_scale.sensory_function_score %></td>
      <td class="bestest<%= i %>_dynamic_walking_score" bgcolor="#FFFFFF" valign="top" width="150"><%= bestest_scale.dynamic_walking_score %></td>
      <td class="bestest<%= i %>_total_score" bgcolor="#FFFFFF" valign="top" width="150"><%= bestest_scale.total_score %></td>
      <td bgcolor="#FFFFFF" valign="top" width="200">
        <%= link_to "詳細", patient_bestest_scale_path(@patient, bestest_scale), class: "bestest#{i}_show_link show_link" %>
      </td>
      <td bgcolor="#FFFFFF" valign="top" width="200">
        <%= link_to "編集する", edit_patient_bestest_scale_path(@patient, bestest_scale), class: "bestest#{i}_edit_link edit_link" %>
      </td>
      <td bgcolor="#FFFFFF" valign="top" width="200">
        <%= link_to "削除する", patient_bestest_scale_path(@patient, bestest_scale),class: "bestest#{i}_delete_link delete_link", method: :delete, data: { confirm: "bestestを削除します。よろしいですか?" } %>
      </td>
    </tr>
  <% end %>
</table>

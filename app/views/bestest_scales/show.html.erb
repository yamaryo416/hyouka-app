<% provide(:title, "Mini-BESTest") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "Mini-BESTest" %>
<div class="link_section d-flex justify-content-between">
  <div class="left_link">
    <%= link_to "Mini-BESTest一覧に戻る", patient_bestest_scales_path(@patient), class: "btn btn-info" %>
  </div>
  <div class="right_link">
    <%= link_to "Mini-BESTestを編集する", edit_patient_bestest_scale_path(@patient, @bestest_scale), class: "custom-btn btn-radius-solid" %>
    <%= link_to "Mini-BESTestを削除する", patient_bestest_scale_path(@patient, @bestest_scale),class: "custom-btn btn-radius-solid", method: :delete, data: { confirm: "bestestを削除します。よろしいですか?" } %>
  </div>
</div>
<div class="main-contents bestest-section">
  <p class="bestest-total-score show-total-score">得点　<%= @bestest_scale.total_score %>点</p>
  <p class="bestest-apa-score show-subtotal-score">予測的姿勢制御　<%= @bestest_scale.apa_score %>点</p>
  <p class="bestest-cpa-score show-subtotal-score">反応的姿勢制御　<%= @bestest_scale.cpa_score %>点</p>
  <p class="bestest-sensory-function-score show-subtotal-score">感覚機能　<%= @bestest_scale.sensory_function_score %>点</p>
  <p class="bestest-dynamic-walking-score show-subtotal-score">動的歩行　<%= @bestest_scale.dynamic_walking_score %>点</p>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">項目</th>
        <th scope="col">評価結果</th>
      </tr>
    </thead>
    <tbody>
      <% @bestest_scale.scale_attributes.each_with_index do |attr_name, i| %>
        <tr>
          <td class="<%= attr_name %>">
            <span><%= i +1 %>)</span>
            <%= link_to BestestScale.human_attribute_name(attr_name), "#", class: "col-sm-3", data: {toggle: "modal", target: "#scale#{i + 1}" } %>
          </td>
          <td class="<%= attr_name %>_score"><%= @bestest_scale.send("#{attr_name}_i18n") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render "bestest_scales/modal/explain_modal" %>
</div>

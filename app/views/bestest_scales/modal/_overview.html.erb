<div class="modal fade" id="bestest-overview" tabindex="-1" role="dialog" aria-labelledby="bestestOverviewLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">概要</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table">
          <tr>
            <th></th>
            <th>得点</th>
          <tr>
            <th>予測的姿勢制御</th>
            <td class="bestest<%= i %>-apa-score"><%= bestest_scale.apa_score %>点</td>
          </tr>
          <tr>
            <th>反応的姿勢制御</th>
            <td class="bestest<%= i %>-cpa-score"><%= bestest_scale.cpa_score %>点</td>
          </tr>
          <tr>
            <th>感覚機能</th>
            <td class="bestest<%= i %>-sensory-function-score"><%= bestest_scale.sensory_function_score %>点</td>
          </tr>
          <tr>
            <th>動的歩行</th>
            <td class="bestest<%= i %>-dynamic-walking-score"><%= bestest_scale.dynamic_walking_score %>点</td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

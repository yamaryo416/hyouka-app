<div class="collapse" id="ankle_mmt_form">
  <div class="card card-body">
    <h3>足関節</h3>
    <div class="d-flex justify-content-center">
      <div class="ankle_mmt_head">
        <dd style="height:24px;"></dd>
        <dd>背屈</dd>
        <dd>底屈</dd>
        <dd>内返し</dd>
        <dd>外返し</dd>
      </div>
      <div class="right_ankle_mmt_form" style="width:80px;">
        <dd>右</dd>
        <% mmt_scale.right_ankle_each_score.each  do |attr_name, value| %>
          <%= f.select attr_name, MmtScale.human_select_options(attr_name) %>
        <% end %>
      </div>
      <div class="left_ankle_mmt_form" style="width:80px;">
        <dd>左</dd>
        <% mmt_scale.left_ankle_each_score.each  do |attr_name, value| %>
          <%= f.select attr_name, MmtScale.human_select_options(attr_name) %>
        <% end %>
      </div>
    </div>
  </div>
</div>

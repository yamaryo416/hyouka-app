<div class="collapse knee_mmt_form" id="knee_mmt_form">
  <div class="card card-body">
    <h3>膝関節</h3>
    <div class="d-flex justify-content-center">
      <div class="knee_mmt_head part-head">
        <dd class="left-top"></dd>
        <dd>屈曲</dd>
        <dd>伸展</dd>
      </div>
      <div class="right_knee_mmt_form mmt-form">
        <dd class="direction-head">右</dd>
        <% mmt_scale.right_knee_scale_score.keys.each  do |attr_name| %>
          <div>
            <%= f.select attr_name, MmtScale.human_select_options(attr_name) %>
          </div>
        <% end %>
      </div>
      <div class="left_knee_mmt_form mmt-form">
        <dd class="direction-head">左</dd>
        <% mmt_scale.left_knee_scale_score.keys.each  do |attr_name| %>
          <div>
            <%= f.select attr_name, MmtScale.human_select_options(attr_name) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

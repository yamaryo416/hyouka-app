<div class="collapse wrist_mmt_form" id="wrist_mmt_form">
  <div class="card card-body">
    <h3>手関節</h3>
    <div class="d-flex justify-content-center">
      <div class="wrist_mmt_head part-head">
        <dd class="left-top"></dd>
        <dd>掌屈</dd>
        <dd>背屈</dd>
      </div>
      <div class="right_wrist_mmt_form mmt-form">
        <dd class="direction-head">右</dd>
        <% mmt_scale.right_wrist_scale_attributes.each  do |attr_name| %>
          <div>
            <%= f.select attr_name, MmtScale.human_select_options(attr_name) %>
          </div>
        <% end %>
      </div>
      <div class="left_wrist_mmt_form mmt-form">
        <dd class="direction-head">左</dd>
        <% mmt_scale.left_wrist_scale_attributes.each  do |attr_name| %>
          <div>
            <%= f.select attr_name, MmtScale.human_select_options(attr_name) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

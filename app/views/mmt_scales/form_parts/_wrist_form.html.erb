<div class="collapse" id="wrist_mmt_form">
  <div class="card card-body">
    <h3>手関節</h3>
    <div class="d-flex justify-content-center">
      <div class="wrist_mmt_head">
        <dd style="height:24px;"></dd>
        <dd>掌屈</dd>
        <dd>背屈</dd>
      </div>
      <div class="right_wrist_mmt_form" style="width:80px;">
        <dd>右</dd>
        <% mmt_scale.right_wrist_each_score.each  do |attr_name, value| %>
          <%= f.select attr_name, MmtScale.human_select_options(attr_name) %>
        <% end %>
      </div>
      <div class="left_wrist_mmt_form" style="width:80px;">
        <dd>左</dd>
        <% mmt_scale.left_wrist_each_score.each  do |attr_name, value| %>
          <%= f.select attr_name, MmtScale.human_select_options(attr_name) %>
        <% end %>
      </div>
    </div>
  </div>
</div>

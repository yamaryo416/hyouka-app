<div class="collapse" id="wrist_mmt_score">
  <div class="card card-body">
    <h3>手関節</h3>
    <div class="d-flex justify-content-center">
      <div class="wrist_mmt_head part-head">
        <dd class="left-top"></dd>
        <dd>掌屈</dd>
        <dd>背屈</dd>
      </div>
      <div class="right_wrist_mmt_score mmt-score">
        <dd class="direction-head">右</dd>
        <% mmt_scale.right_wrist_scale_score.keys.each  do |attr_name| %>
          <dd class="<%= attr_name %>_score"><%= mmt_scale.send("#{attr_name}_i18n") %></dd>
        <% end %>
      </div>
      <div class="left_wrist_mmt_score mmt-score">
        <dd class="direction-head">左</dd>
        <% mmt_scale.left_wrist_scale_score.keys.each  do |attr_name| %>
          <dd class="<%= attr_name %>_score"><%= mmt_scale.send("#{attr_name}_i18n") %></dd>
        <% end %>
      </div>
    </div>
  </div>
</div>

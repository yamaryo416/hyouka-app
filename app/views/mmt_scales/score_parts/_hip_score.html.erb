<div class="collapse" id="hip_mmt_score">
  <div class="card card-body">
    <h3>股関節</h3>
    <div class="d-flex justify-content-center">
      <div class="hip_mmt_head part-head">
        <dd class="left-top"></dd>
        <dd>屈曲(腸腰筋)</dd>
        <dd>屈曲(縫工筋)</dd>
        <dd>伸展(大臀筋、ハム)</dd>
        <dd>伸展(大殿筋)</dd>
        <dd>内転</dd>
        <dd>外転(中殿筋、小殿筋)</dd>
        <dd>外転(大腿筋膜張筋)</dd>
        <dd>内旋</dd>
        <dd>外旋</dd>
      </div>
      <div class="right_hip_mmt_score mmt-score">
        <dd class="direction-head">右</dd>
        <% mmt_scale.right_hip_scale_attributes.each  do |attr_name| %>
          <dd class="<%= attr_name %>_score"><%= mmt_scale.send("#{attr_name}_i18n") %></dd>
        <% end %>
      </div>
      <div class="left_hip_mmt_score mmt-score">
        <dd class="direction-head">左</dd>
        <% mmt_scale.left_hip_scale_attributes.each  do |attr_name| %>
          <dd class="<%= attr_name %>_score"><%= mmt_scale.send("#{attr_name}_i18n") %></dd>
        <% end %>
      </div>
    </div>
  </div>
</div>

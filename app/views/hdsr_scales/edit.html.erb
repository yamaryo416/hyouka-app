<% provide(:title, "HDS-R編集") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "HDS-R" %>
<div class="main-contents patient-page edit-hdsr edit-section">
  <div class="container">
    <%= form_scale_link_section("HDS-R", "hdsr_scales", @patient) %>
    <%= form_with(url: patient_hdsr_scale_path(id: @hdsr_scale), scope: :hdsr_scale, local: true, method: :patch) do |f| %>
      <%= render "form", f: f %>
      <div class="submit-form hdsr-submit-form">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>

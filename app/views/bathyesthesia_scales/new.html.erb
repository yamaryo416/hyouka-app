<% provide(:title, "深部感覚検査作成") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "深部感覚検査" %>
<%= link_to "深部感覚検査一覧に戻る", patient_bathyesthesia_scales_path(@patient), class: "btn btn-info" %>
<div class="main-contents new-bathyesthesia">
  <%= form_with(url: patient_bathyesthesia_scales_path, scope: :bathyesthesia_scale, local: true) do |f| %>
    <h3>位置覚</h3>
    <div class="d-flex justify-content-center">
      <div class="bathyesthesia_head part-head">
        <dd class="left-top"></dd>
        <dd>上肢</dd>
        <dd>下肢</dd>
      </div>
      <div class="right_bathyesthesia_form bathyesthesia-form">
        <dd class="direction-head">右</dd>
        <% @bathyesthesia_scale.right_position_sense_scale_score.keys.each  do |attr_name| %>
          <div>
            <%= f.select attr_name, BathyesthesiaScale.human_select_options(attr_name) %>
          </div>
        <% end %>
      </div>
      <div class="left_bathyesthesia_form bathyesthesia-form">
        <dd class="direction-head">左</dd>
        <% @bathyesthesia_scale.left_position_sense_scale_score.keys.each  do |attr_name| %>
          <div>
            <%= f.select attr_name, BathyesthesiaScale.human_select_options(attr_name) %>
          </div>
        <% end %>
      </div>
    </div>
    <h3>運動覚</h3>
    <div class="d-flex justify-content-center">
      <div class="bathyesthesia_head part-head">
        <dd class="left-top"></dd>
        <dd>手指</dd>
        <dd>足趾</dd>
      </div>
      <div class="right_bathyesthesia_form bathyesthesia-form">
        <dd class="direction-head">右</dd>
        <% @bathyesthesia_scale.right_motor_sense_scale_score.keys.each  do |attr_name| %>
          <div>
            <%= f.select attr_name, BathyesthesiaScale.human_select_options(attr_name) %>
          </div>
        <% end %>
      </div>
      <div class="left_bathyesthesia_form bathyesthesia-form">
        <dd class="direction-head">左</dd>
        <% @bathyesthesia_scale.left_motor_sense_scale_score.keys.each  do |attr_name| %>
          <div>
            <%= f.select attr_name, BathyesthesiaScale.human_select_options(attr_name) %>
          </div>
        <% end %>
      </div>
    </div>
    <%= f.submit %>
  <% end %>
</div>

<% provide(:title, "深部感覚検査作成") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "深部感覚検査" %>
<div class="main-contents patient-page new-bathyesthesia new-section">
  <div class="container">
    <%= form_scale_link_section("振武感覚検査", "bathyesthesia_scales", @patient) %>
    <%= form_with(url: patient_bathyesthesia_scales_path, scope: :bathyesthesia_scale, local: true) do |f| %>
      <%= render "form", f: f, bathyesthesia_scale: @bathyesthesia_scale %>
      <div class="submit-form">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>

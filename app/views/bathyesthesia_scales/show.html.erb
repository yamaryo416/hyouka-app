<% provide(:title, "深部感覚検査") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "深部感覚検査" %>
<div class="link_section d-flex justify-content-between">
  <div class="left_link">
    <%= link_to "深部感覚検査一覧に戻る", patient_bathyesthesia_scales_path(@patient), class: "btn btn-info" %>
  </div>
  <div class="right_link">
    <%= link_to "深部感覚検査を編集する", edit_patient_bathyesthesia_scale_path(@patient, @bathyesthesia_scale), class: "custom-btn btn-radius-solid" %>
    <%= link_to "深部感覚検査を削除する", patient_bathyesthesia_scale_path(@patient, @bathyesthesia_scale),class: "custom-btn btn-radius-solid", method: :delete, data: { confirm: "bathyesthesiaを削除します。よろしいですか?" } %>
  </div>
</div>
<div class="main-contents bathyesthesia-section">
  <h3>位置覚</h3>
  <div class="d-flex justify-content-center">
    <div class="bathyesthesia_head part-head">
      <dd class="left-top"></dd>
      <dd>上肢</dd>
      <dd>下肢</dd>
    </div>
    <div class="right_bathyesthesia_score bathyesthesia-score">
      <dd class="direction-head">右</dd>
      <% @bathyesthesia_scale.right_position_sense_scale_score.keys.each  do |attr_name| %>
        <dd class="<%= attr_name %>_score"><%= @bathyesthesia_scale.send("#{attr_name}_i18n") %></dd>
      <% end %>
    </div>
    <div class="left_bathyesthesia_score bathyesthesia-score">
      <dd class="direction-head">左</dd>
      <% @bathyesthesia_scale.left_position_sense_scale_score.keys.each  do |attr_name| %>
        <dd class="<%= attr_name %>_score"><%= @bathyesthesia_scale.send("#{attr_name}_i18n") %></dd>
      <% end %>
    </div>
  </div>
  <h3>運動覚</h3>
  <div class="d-flex justify-content-center">
    <div class="bathyesthesia_head part-head">
      <dd class="left-top"></dd>
      <dd>手指</dd>
      <dd>足趾</dd>
    </div>
    <div class="right_bathyesthesia_score bathyesthesia-score">
      <dd class="direction-head">右</dd>
      <% @bathyesthesia_scale.right_motor_sense_scale_score.keys.each  do |attr_name| %>
        <dd class="<%= attr_name %>_score"><%= @bathyesthesia_scale.send("#{attr_name}_i18n") %></dd>
      <% end %>
    </div>
    <div class="left_bathyesthesia_score bathyesthesia-score">
      <dd class="direction-head">左</dd>
      <% @bathyesthesia_scale.left_motor_sense_scale_score.keys.each  do |attr_name| %>
        <dd class="<%= attr_name %>_score"><%= @bathyesthesia_scale.send("#{attr_name}_i18n") %></dd>
      <% end %>
    </div>
  </div>
</div>

<h1>深部感覚検査 (位置覚、運動覚)</h1>
<%= @patient.unique_id %>
<%= link_to "患者ページに戻る", patient_path(@patient) %>
<h3>位置覚</h3>
<div class="d-flex justify-content-center">
  <div class="bathyesthesia_head">
    <dd style="height:24px;"></dd>
    <dd>上肢</dd>
    <dd>下肢</dd>
  </div>
  <div class="right_bathyesthesia_score" style="width:80px;">
    <dd>右</dd>
    <% @bathyesthesia_scale.right_position_sense_each_score.each  do |attr_name, value| %>
      <dd class="<%= attr_name %>_score"><%= @bathyesthesia_scale.send("#{attr_name}_i18n") %></dd>
    <% end %>
  </div>
  <div class="left_bathyesthesia_score" style="width:80px;">
    <dd>左</dd>
    <% @bathyesthesia_scale.left_position_sense_each_score.each  do |attr_name, value| %>
      <dd class="<%= attr_name %>_score"><%= @bathyesthesia_scale.send("#{attr_name}_i18n") %></dd>
    <% end %>
  </div>
</div>
<h3>運動覚</h3>
<div class="d-flex justify-content-center">
  <div class="bathyesthesia_head">
    <dd style="height:24px;"></dd>
    <dd>手指</dd>
    <dd>足趾</dd>
  </div>
  <div class="right_bathyesthesia_score" style="width:80px;">
    <dd>右</dd>
    <% @bathyesthesia_scale.right_motor_sense_each_score.each  do |attr_name, value| %>
      <dd class="<%= attr_name %>_score"><%= @bathyesthesia_scale.send("#{attr_name}_i18n") %></dd>
    <% end %>
  </div>
  <div class="left_bathyesthesia_score" style="width:80px;">
    <dd>左</dd>
    <% @bathyesthesia_scale.left_motor_sense_each_score.each  do |attr_name, value| %>
      <dd class="<%= attr_name %>_score"><%= @bathyesthesia_scale.send("#{attr_name}_i18n") %></dd>
    <% end %>
  </div>
</div>

<%= link_to "深部感覚検査を編集する", edit_patient_bathyesthesia_scales_path(@patient) %>
<%= link_to "深部感覚検査を削除する", patient_bathyesthesia_scales_path(@patient), method: :delete, data: { confirm: "深部感覚検査を削除します。よろしいですか?" } %>

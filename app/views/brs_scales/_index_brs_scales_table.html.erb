<table class="table">
  <thead>
    <tr>
      <th scope="col">作成日時</th>
      <th scope="col">上肢</th>
      <th scope="col">手指</th>
      <th scope="col">下肢</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% brs_scales.each_with_index do |brs_scale, i| %>
      <tr class="brs_score">
        <td class="brs<%= i %>-created-at"><%= brs_scale.date_of_creation %></td>
        <td class="brs<%= i %>-upper-limb-score"><%= brs_scale.upper_limb_i18n %></td>
        <td class="brs<%= i %>-finger-score"><%= brs_scale.finger_i18n %></td>
        <td class="brs<%= i %>-lower-limb-score"><%= brs_scale.lower_limb_i18n %></td>
        <td>
          <%= link_to "詳細", patient_brs_scale_path(patient, brs_scale), class: "brs#{i}_show_link show_link custom-btn btn-radius-solid" %>
        </td>
        <td>
          <%= link_to "編集", edit_patient_brs_scale_path(patient, brs_scale), class: "brs#{i}_edit_link edit_link custom-btn btn-radius-solid" %>
        </td>
        <td>
          <%= link_to "削除", patient_brs_scale_path(patient, brs_scale),class: "hdsr#{i}_delete_link delete_link custom-btn btn-radius-solid", method: :delete, data: { confirm: "BRSを削除します。よろしいですか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

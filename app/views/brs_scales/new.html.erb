<h1>BRS</h1>
<%= @patient.unique_id %>
<%= link_to "患者ページに戻る", patient_path(@patient) %>
<%= form_with(url: patient_brs_scales_path, scope: :brs_scale, local: true) do |f| %>
  <% @brs_scale.each_score.each do |attr_name, score| %>
    <%= f.label attr_name %>
    <%= f.select attr_name, BrsScale.human_select_options(attr_name) %>
  <% end %>
  <%= f.submit %>
<% end %>

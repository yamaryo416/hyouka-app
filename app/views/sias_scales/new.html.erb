<% provide(:title, "SIAS作成") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "SIAS" %>
<%= link_to "SIAS一覧に戻る", patient_sias_scales_path(@patient), class: "btn btn-info" %>
<div class="main-contents new-sias">
  <%= form_with(url: patient_sias_scales_path, scope: :sias_scale, local: true) do |f| %>
    <h3>運動機能</h3>
    <%= render "sias_scales/form_parts/motor_function_form", f: f %>
    <h3>筋緊張・腱反射</h3>
    <%= render "sias_scales/form_parts/tone_reflex_form", f: f %>
    <h3>感覚</h3>
    <%= render "sias_scales/form_parts/sensation_form", f: f %>
    <h3>関節可動域、疼痛</h3>
    <%= render "sias_scales/form_parts/rom_pain_form", f: f %>
    <h3>垂直性</h3>
    <%= render "sias_scales/form_parts/trunk_function_form", f: f %>
    <h3>高次脳機能</h3>
    <%= render "sias_scales/form_parts/higher_brain_function_form", f: f %>
    <h3>健側機能</h3>
    <%= render "sias_scales/form_parts/healthy_side_function_form", f: f %>
    <%= render "sias_scales/modal/explain_modal" %>
    <%= f.submit %>
  <% end %>
</div>

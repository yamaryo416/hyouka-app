<% provide(:title, "SIAS作成") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "SIAS" %>
<div class="main-contents patient-page new-sias new-section">
  <div class="container">
    <%= form_scale_link_section("SIAS", "sias_scales", @patient) %>
    <%= form_with(url: patient_sias_scales_path, scope: :sias_scale, local: true) do |f| %>
      <%= render "form", f: f %>
      <%= render "sias_scales/modal/explain_modal" %>
      <%= f.submit %>
    <% end %>
  </div>
</div>

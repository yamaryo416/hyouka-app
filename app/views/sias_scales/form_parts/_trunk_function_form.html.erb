<% SiasScale::TRUNK_FUNCTION_ATTRIBUTES.each_with_index do |attr_name, i| %>
  <div class="scale_column row">
    <span><%= i + 17 %>)</span>
    <%= link_to SiasScale.human_attribute_name(attr_name), "#", class: "col-sm-3", data: {toggle: "modal", target: "#scale#{i + 17}" } %>
    <%= f.select attr_name, SiasScale.human_select_options(attr_name), class: "col-sm-2" %>
  </div>
<% end %>

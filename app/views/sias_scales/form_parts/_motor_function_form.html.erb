<% SiasScale::MOTOR_FUNCTION_ATTRIBUTES.each_with_index do |attr_name, i| %>
  <div class="scale_column row">
    <span><%= i + 1 %>)</span>
    <%= link_to SiasScale.human_attribute_name(attr_name), "#", class: "col-10 col-md-2", data: {toggle: "modal", target: "#scale#{i + 1}" } %>
    <%= f.select attr_name, SiasScale.human_select_options(attr_name), class: "col-12 col-md-10" %>
  </div>
<% end %>

<h1>MAS</h1>
<%= link_to "患者ページに戻る", patient_path(@patient) %>
<%= form_with(url: patient_mas_scales_path, scope: :mas_scale, local: true, method: :patch) do |f| %>
  <% @mas_scale.each_score.keys.each do |attr_name| %>
    <%= f.label attr_name %>
    <%= f.select attr_name, MasScale.human_select_options(attr_name) %>
  <% end %>
  <%= f.submit %>
<% end %>

<% provide(:title, "MAS") %>
<%= render "shared/breadcrumb", patient: @patient, scale: "MAS" %>
<div class="link_section d-flex justify-content-between">
  <div class="left_link">
    <%= link_to "MAS一覧に戻る", patient_mas_scales_path(@patient), class: "btn btn-info" %>
  </div>
  <div class="right_link">
    <%= link_to "MASを編集する", edit_patient_mas_scale_path(@patient, @mas_scale), class: "custom-btn btn-radius-solid" %>
    <%= link_to "MASを削除する", patient_mas_scale_path(@patient, @mas_scale),class: "custom-btn btn-radius-solid", method: :delete, data: { confirm: "MASを削除します。よろしいですか?" } %>
  </div>
</div>
<div class="main-contents mas-section">
  <div class="d-flex justify-content-center">
    <div class="shoulder_mas_head part-head">
      <dd class="left-top"></dd>
      <dd>肘関節</dd>
      <dd>手関節</dd>
      <dd>膝関節</dd>
      <dd>足関節</dd>
    </div>
    <div class="right_shoulder_mas_score mas-score" >
      <dd class="direction-head">右</dd>
      <% @mas_scale.right_scale_score.keys.each do |attr_name| %>
        <dd class="<%= attr_name %>_score"><%= @mas_scale.send("#{attr_name}_i18n") %></dd>
      <% end %>
    </div>
    <div class="left_shoulder_mas_score mas-score">
      <dd class="direction-head">左</dd>
      <% @mas_scale.left_scale_score.keys.each do |attr_name| %>
        <dd class="<%= attr_name %>_score"><%= @mas_scale.send("#{attr_name}_i18n") %></dd>
      <% end %>
    </div>
</div>

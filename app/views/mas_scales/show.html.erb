<%= link_to "患者ページに戻る", patient_path(@patient) %>
<%= @patient.unique_id %>
<% @mas_scale.each_score.keys.each do |attr_name| %>
  <dt class="<%= attr_name %>"><%= MasScale.human_attribute_name(attr_name) %></dt>
  <dd class="<%= attr_name %>_score"><%= @mas_scale.send("#{attr_name}_i18n") %></dd>
<% end %>
<%= link_to "MASを編集する", edit_patient_mas_scales_path(@patient) %>
<%= link_to "MASを削除する", patient_mas_scales_path(@patient), method: :delete, data: { confirm: "MASを削除します。よろしいですか?" } %>

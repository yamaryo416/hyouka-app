<%= @patient.unique_id %>
<%= link_to "患者一覧に戻る", patients_path %>
<%= @patient.sex_i18n %>
<%= @patient.age %>
<%= @patient.weight %>
<%= @patient.height %>
<%= link_to "基本情報を編集する", edit_patient_path %>
<%= link_to "患者情報を削除する", @patient, method: :delete, data: { confirm: "患者情報を削除します。よろしいですか?" } %>
<h3>評価初見</h3>
<h3>実施した評価</h3>
<% if @patient.sias_scale.present? %>
  <%= link_to "SIAS", patient_sias_scales_path(@patient), class: "defined-scale", local: true %>
  <p class="sias-total-score"><%= @patient.sias_scale.total_score %>点</p>
  <% if @patient.sias_scale.undefined_count > 0 %>
    <p class="undefined-columns-count">*<%= @patient.sias_scale.undefined_count %>項目が未入力です。</p>
  <% end %>
<% end %>
<% if @patient.rom_scale.present? %>
  <%= link_to "ROM", patient_rom_scales_path(@patient), class: "defined-scale", local: true %>
<% end %>
<% if @patient.mmt_scale.present? %>
  <%= link_to "MMT", patient_mmt_scales_path(@patient), class: "defined-scale", local: true %>
<% end %>

<% end %>
<% if @patient.bathyesthesia_scale.present? %>
  <%= link_to "深部感覚検査", patient_bathyesthesia_scales_path(@patient), class: "defined-scale", local: true %>
<% end %>
<% if @patient.hdsr_scales.present? %>
  <%= link_to "HDS-R", patient_hdsr_scales_path(@patient), class: "defined-scale", local: true %>
<% end %>
<% if @patient.fbs_scale.present? %>

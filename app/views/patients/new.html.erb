<h1>患者登録</h1>
<% if @patient.errors.any? %>
  <ul>
    <% @patient.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @patient, local: true) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :sex %><br />
  <%= f.select :sex, Patient.sexes.keys.map { |k| [I18n.t("enums.patient.sex.#{k}"), k] } %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :weight %>
  <%= f.number_field :weight, step: '0.1' %>

  <%= f.label :height %>
  <%= f.number_field :height, step: '0.1' %>

  <%= f.submit "患者登録" %>
<% end %>

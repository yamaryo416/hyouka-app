<% provide(:title, "患者一覧") %>
<div class="main-contents">
  <%= link_to "患者登録", new_patient_path %>
  <table class="table">
    <thead>
      <tr>
        <th>id</th>
        <th>患者名</th>
        <th>性別</th>
        <th>年齢</th>
        <th>登録日</th>
      </tr>
    </thead>
    <tbody>
      <%= render @patients %>
    </tbody>
  </table>
  <%= paginate @patients %>
</div>

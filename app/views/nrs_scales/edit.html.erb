<h1>NRS</h1>
<%= @patient.unique_id %>
<%= link_to "NRS一覧に戻る", patient_nrs_scales_path(@patient) %>
<%= form_with(url: patient_nrs_scale_path(id: @nrs_scale), scope: :nrs_scale, local: true, method: :patch) do |f| %>
  <% if @nrs_scale.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@nrs_scale.errors.count, "error") %>.
      </div>
      <ul>
      <%@nrs_scale.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :rating %>
    <%= f.number_field :rating, step: "1", in: 0..10 %>
  </p>
  <p>
    <%= f.label :status %>
    <%= f.select :status, NrsScale.statuses.keys.map { |k| [I18n.t("enums.nrs_scale.status.#{k}"), k] }%>
  </p>
  <p>
    <%= f.label :supplement %>
    <%= f.text_field :supplement %>
  </p>
  <%= f.submit %>
<% end %>
